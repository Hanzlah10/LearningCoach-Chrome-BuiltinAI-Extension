{
    "manifest_version": 3,
    "name": "Personalized Learning Coach",
    "version": "1.0",
    "description": "AI-powered learning assistant for students",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "declarativeNetRequest" 
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }